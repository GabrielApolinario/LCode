@model LCode.Models.Modulo

@{
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <title>Cadastre-se</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/login.css")
    @Styles.Render("~/Content/cad-curso.css")
    @Styles.Render("~/Content/style.css")


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" sizes="16x16" href="image/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

</head>

<body>
    <script src="js/bootstrap.min.js"></script>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="row w-100 justify-content-center m-auto  form-cad">
                        @using (Html.BeginForm("AddModulo", "Curso", new { curso_id = Model.mod_curso, prevUrl = Request.UrlReferrer.ToString()}, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                        <form class="mt-3 ">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-row align-items-center">
                                <div class="col-11 box-title">
                                    <h4 class="title mt-3">Cadastro de Módulo</h4>
                                </div>
                                @*<div class="col-11 form-group mt-3 mx-auto" hidden="hidden">
                                    <label>hidden</label>
                                    <span class="fas fa-file-signature"></span> @Html.EditorFor(model => model.mod_curso, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.mod_curso, "", new { @class = "text-danger" })
                                </div>*@

                                <div class="col-11 form-group mx-auto">
                                    <label>Nome do Módulo</label>
                                    <span class="fas fa-file-signature"></span>@Html.EditorFor(model => model.mod_nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome do módulo" } })
                                    @Html.ValidationMessageFor(model => model.mod_nome, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-11 form-group mx-auto">
                                    <label>Descrição</label>
                                    <span class="fas fa-align-justify"></span>
                                    @Html.TextAreaFor(model => model.mod_desc, new { style = "width:100%; height:150px; background-color:transparent;  border-radius: 1.2rem ; padding: .3rem 2.7rem;", placeholder = "Digite a descrição" })
                                    @Html.ValidationMessageFor(model => model.mod_desc, "", new { @class = "text-danger" })
                                </div>
                                    @*@Html.DropDownList("modulos", "Escolha o Módulo")*@
                            </div>

                            <div class="col-4 col-md-6 mx-auto">
                                <button type="submit" class="btn btn btn-block btn-purple-form mt-4 mb-5">Cadastrar</button>
                            </div>
                        </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
