@model LCode.Models.Curso

@{
    ViewBag.Title = "CadastroCurso";
}
@{
    Layout = null;
}


<head>
    <meta charset="utf-8">
    <title>Cadastre-se</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/login.css")
    @Styles.Render("~/Content/cad-curso.css")
    @Styles.Render("~/Content/style.css")


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" sizes="16x16" href="image/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

</head>

<body>
    <script src="js/bootstrap.min.js"></script>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="row w-100 justify-content-center m-auto  form-cad">
                        @using (Html.BeginForm("CadastroCurso", "Curso", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <form class="mt-5 ">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-row align-items-center">
                                    <div class="col-11 box-title">
                                        <h4 class="title mt-3">Cadastro de Curso</h4>
                                    </div>
                                    <div class="col-11 form-group mt-3 mx-auto">
                                        <label>Nome do Curso</label>
                                        <span class="fas fa-file-signature"></span>  @Html.EditorFor(model => model.Curso_nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome do curso" } })
                                        @Html.ValidationMessageFor(model => model.Curso_nome, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-11 form-group mx-auto">
                                        <label>Preço</label>
                                        <span class="fas fa-dollar-sign"></span>@Html.EditorFor(model => model.Curso_valor, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o preço" } })
                                        @Html.ValidationMessageFor(model => model.Curso_valor, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-11 form-group mx-auto">
                                        <label>Duração do Curso</label>
                                        <span class="far fa-clock"></span> @Html.EditorFor(model => model.Curso_duracao, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite a duração" } })
                                        @Html.ValidationMessageFor(model => model.Curso_duracao, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-11 form-group mx-auto">
                                        <label>Descrição</label>
                                        <span class="fas fa-align-justify"></span> @Html.TextAreaFor(model => model.Curso_descricao, new { style = "width:100%; height:150px; background-color:transparent;  border-radius: 1.2rem ; padding: .3rem 2.7rem; color:#e6e6e6", placeholder = "Digite a descrição" })
                                        @Html.ValidationMessageFor(model => model.Curso_descricao, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-11 form-group mx-auto">
                                        <label>Selecione a Categoria do Curso</label>
                                        <span class="far fa-hand-pointer"></span> @Html.DropDownListFor(model => model.Curso_categoria, Model.Categorias, "Selecione uma categoria", new { @class = "form-control selecionar" })
                                        @Html.ValidationMessageFor(model => model.Curso_categoria, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-11 form-group mx-auto">
                                        <label>Selecione uma imagem para o curso</label>
                                        <span class="fas fa-image"></span>@Html.TextBoxFor(model => model.Imagem, new { type = "file", @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.Imagem, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-4 col-md-6 mx-auto">
                                    <button type="submit" class="btn btn btn-block btn-purple-form mt-4 mb-5">Cadastrar</button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
