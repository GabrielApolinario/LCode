@model IEnumerable<LCode.Models.Curso>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>Cursos online</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link href="~/Content/course.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/global.css" />
    <link rel="stylesheet" href="~/Content/index.css">
    <link rel="stylesheet" href="~/Content/login.css">
    <link href="~/Content/course.css" rel="stylesheet" />
    <link rel="icon" type="~/Image/png" sizes="16x16" href="~/~/Image/favicon.png">
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
          integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU"
          crossorigin="anonymous">

</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @if (ViewBag.curso != "")
    {
        <h2>@ViewBag.curso</h2>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Curso_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso_nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso_valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso_duracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso_descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso_status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso_categoria)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso_nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso_valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso_duracao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso_descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso_status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso_categoria)
                </td>
            </tr>
        }

    </table>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/global.js"></script>
</body>
</html>
