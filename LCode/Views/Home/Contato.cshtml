        <!--------------------------BANNER-SECTION---------------------------->

        <section id="banner">

            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p class="promo-title" style="color: rgb(255, 255, 255)">Entre em contato conosco</p>
