@model IEnumerable <LCode.Models.Curso>

@{
    ViewBag.Title = "Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Compra</h2>


    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Compra</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @foreach (var item in Model)
    {
        @Html.DisplayFor(model => item.Curso_id)
    }
</div>
@using (Html.BeginForm("Compra", "Compra", FormMethod.Post))
{          
<div class="col-md-10">
    @Html.DropDownList("Pagamento", new List<SelectListItem>
                                    {
                                    new SelectListItem() {Text = "Cartão de crédito", Value = "Cartao"},
                                    new SelectListItem() {Text = "Boleto", Value = "Boleto"},
                                    }, "Selecione o tipo de pagamento", new { @class = "form-control" })
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</div>
}

    


