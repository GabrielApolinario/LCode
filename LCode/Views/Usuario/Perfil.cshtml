@model LCode.Models.Usuarios

@{
    Layout = null;
}
<head>
    <meta charset="utf-8">
    <title>Cadastre-se</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/login.css")
    @Styles.Render("~/Content/cad-curso.css")
    @Styles.Render("~/Content/style.css")


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" sizes="16x16" href="image/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

</head>

<body>
    <script src="js/bootstrap.min.js"></script>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="row w-100 justify-content-center m-auto form-cad">
                        <div class="row w-100 justify-content-center  m-auto">
                            @using (Html.BeginForm("Editar", "Usuario", new { usu_id = Model.Usu_id }))
                            {
                                <form class="mt-3">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-row align-items-center">
                                        <div class="col-11 box-title">
                                            <h4 class="title mt-3">Cadastro de Curso</h4>
                                        </div>
                                        <div class="col-5 form-group mt-3 mx-auto">
                                            <label> @Html.DisplayNameFor(model => model.Usu_nome)</label>
                                            <span class="fas fa-user"></span> @Html.EditorFor(model => model.Usu_nome, new { htmlAttributes = new { @class = "form-control", @Value = Model.Usu_nome } })
                                        </div>

                                        <div class="col-5 form-group mt-3 mx-auto">
                                            <label>@Html.DisplayNameFor(model => model.Usu_sobrenome)</label>
                                            <span class="fas fa-user"></span>  @Html.EditorFor(model => model.Usu_sobrenome, new { htmlAttributes = new { @class = "form-control", @Value = Model.Usu_sobrenome } })
                                        </div>

                                        <div class="col-11 form-group mt-3 mx-auto">
                                            <label> @Html.DisplayNameFor(model => model.Usu_email)</label>
                                            <span class="far fa-envelope"></span>   @Html.EditorFor(model => model.Usu_email, new { htmlAttributes = new { @class = "form-control", @Value = Model.Usu_email } })
                                        </div>

                                        <div class="col-5 form-group mt-3 mx-auto">
                                            <label> @Html.DisplayNameFor(model => model.Usu_cpf_ou_cnpj)</label>
                                            <span class="fas fa-address-card"></span>@Html.EditorFor(model => model.Usu_cpf_ou_cnpj, new { htmlAttributes = new { @class = "form-control", @Value = Model.Usu_cpf_ou_cnpj } })
                                        </div>

                                        <div class="col-5 form-group mt-3 mx-auto">
                                            <label>  @Html.DisplayNameFor(model => model.Usu_data_nasc)</label>
                                            <span class="far fa-calendar-alt"></span>@Html.EditorFor(model => model.Usu_data_nasc, new { htmlAttributes = new { @class = "form-control", @Value = Model.Usu_data_nasc } })
                                        </div>


                                        <div class="col-11 form-group mt-3 mx-auto">
                                            <label> @Html.DisplayNameFor(model => model.Usu_empresa)</label>
                                            <span class="fas fa-building"></span> @Html.EditorFor(model => model.Usu_empresa, new { htmlAttributes = new { @class = "form-control", @Value = Model.Usu_empresa } })
                                        </div>


                                        <div class="col-11 form-group mt-3 mx-auto">
                                            <label> @Html.DisplayNameFor(model => model.Usu_senha)</label>
                                            <span class="fas fa-lock"></span> @Html.EditorFor(model => model.Usu_senha, new { htmlAttributes = new { @class = "form-control", @Value = Model.Usu_senha, @Type = "password" } })
                                        </div>

                                    </div>
                                    <div class="col-8 col-md-10 mx-auto">
                                        <button type="submit" class="btn btn btn-block btn-purple-form mt-4 mb-5">Editar</button>
                                    </div>

                                </form>
                            }
                        </div>
                    </div>
            </div>
        </div>
    </section>
    <body>


     
        
        
        