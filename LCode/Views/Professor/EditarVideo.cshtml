@model LCode.ViewModels.CursoVideoModuloViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/login.css")
    @Styles.Render("~/Content/cad-curso.css")
    @Styles.Render("~/Content/style.css")

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="~/image/png" sizes="16x16" href="~/image/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

</head>

<body>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="row w-100 justify-content-center m-auto  form-cad">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <form class="mt-5 ">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-row align-items-center">
                                    <div class="col-11 box-title">
                                        <h4 class="title mt-3">Editar Aula</h4>
                                    </div>
                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="col-11 form-group mt-3 mx-auto">
                                            @Html.LabelFor(model => model.video_titulo)
                                            <span class="fas fa-file-signature"></span>
                                            @Html.EditorFor(model => model.video_titulo, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.video_titulo, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-11 form-group mx-auto">
                                            @Html.LabelFor(model => model.video_descricao)
                                            <span class="fas fa-align-justify"></span>
                                                @Html.TextAreaFor(model => model.video_descricao, new { style = "width:100%; height:150px; background-color:transparent;  border-radius: 1.2rem ; padding: .3rem 2.7rem;" })
                                                @Html.ValidationMessageFor(model => model.video_descricao, "", new { @class = "text-danger" })                                            
                                        </div>

                                        <div class="col-11 form-group mx-auto">
                                            <label>Selecione o vídeo</label>
                                            <span class="fas fa-file-video"></span>
                                            @Html.TextBoxFor(model => model.video, new { type = "file", @class = "form-control" })
                                        </div>

                                        <div class="col-4 col-md-6 mx-auto">
                                            <button type="submit" class="btn btn btn-block btn-purple-form mt-4 mb-5">Editar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
