@model IEnumerable<LCode.ViewModels.CursoVideoModuloViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/login.css">
    <link rel="stylesheet" href="~/Content/cad-curso.css">
    <link rel="stylesheet" href="~/Content/style.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
</head>
<body>
    @if (TempData["ModCadastrado"] != null)
    {
        <div class="mt-3 alert alert-success">
            @TempData["ModCadastrado"]
        </div>
    }
    @if (TempData["VidCadastrado"] != null)
    {
        <div class="mt-3 alert alert-success">
            @TempData["VidCadastrado"]
        </div>
    }
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.video_titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.video_descricao)
                <th><i class="fas fa-edit"></i></th>
                <th>
                    <a href="@Url.Action("AddModulo", "Curso", new { curso_id = Request.QueryString["curso_id"] })"><button type="submit" class="btn btn-purple-form btn-cursos-criados">Inserir novo módulo</button></a>
                </th>
                <th>
                    <a href="@Url.Action("CadastraVideo", "Video", new { curso_id = Request.QueryString["curso_id"] })"><button type="submit" class="btn btn-purple-form btn-cursos-criados">Inserir novo vídeo</button></a>
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.video_titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.video_descricao)
                </td>
                <td>
                    <a href="@Url.Action("EditarVideo", "Professor", new { curso_id = item.Curso_id, video_id = item.video_id })"><button type="submit" class="btn btn-purple-form btn-cursos-criados">Editar</button></a>
                </td>
            </tr>
        }

    </table>
</body>
</html>
